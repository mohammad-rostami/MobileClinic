                    android:background="@drawable/pressed_menubtn"
                    android:gravity="right|center"
                    android:paddingRight="55dip"
                    android:text="مصمومیت"
                    android:textColor="#878787"
                    android:textSize="18dip"
                    android:textStyle="bold" />

