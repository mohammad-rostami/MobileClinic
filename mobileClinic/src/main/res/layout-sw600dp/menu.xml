                    android:layout_width="fill_parent"
                    android:layout_height="65dip"
                    android:background="@drawable/pressed_menubtn"
                    android:gravity="right|center"
                    android:paddingRight="55dip"
                    android:text="سرمازدگی"
                    android:textColor="#878787"
                    android:textSize="18dip"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button10"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="65dip"
                    android:background="@drawable/pressed_menubtn"
                    android:gravity="right|center"
                    android:paddingRight="55dip"
                    android:text="بیماری های ناگهانی"
                    android:textColor="#878787"
                    android:textSize="18dip"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#eaeaea"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/menu2"
                android:layout_width="fill_parent"
                android:layout_height="58dip"
                android:background="@drawable/pressed_menubtn"
                android:drawableRight="@drawable/diagnosis_color1"
                android:gravity="right|center"
                android:paddingLeft="10dip"
                android:paddingRight="16dip"
                android:text="تشخیص بیماری"
                android:textColor="#212121"
                android:textSize="20dip"
                android:textStyle="bold" android:drawablePadding="32dip" style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/menu3"
                android:layout_width="fill_parent"
                android:layout_height="58dip"
                android:background="@drawable/pressed_menubtn"
                android:drawablePadding="32dip"
                android:drawableRight="@drawable/about_color1"
                android:gravity="right|center"
                android:paddingLeft="10dip"
                android:paddingRight="16dip"
                android:text="درباره"
