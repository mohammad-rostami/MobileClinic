                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:text="مشخصات"
                        android:textColor="#ffffff"
                        android:textSize="22dip"
                        android:textStyle="bold" />

